{
  "name": "eco-capture-and-claim",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.8.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:dev": "turbo run build:dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:mobile": "npm run dev --workspace=apps/mobile",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.17.14",
    "@types/react": "^18.3.18",
    "eslint": "8.56.0",
    "prettier": "^3.0.3",
    "turbo": "^1.13.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=11.0.0"
  },
  "dependencies": {
    "@shopify/app-bridge": "3.5.1",
    "@shopify/app-bridge-react": "3.5.1",
    "@shopify/app-bridge-utils": "3.5.1",
    "react": "18.0.0",
    "react-dom": "18.0.0"
  }
}
