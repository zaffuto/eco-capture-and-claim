    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.18",
    "prettier": "3.4.2",
    "turbo": "1.13.4",
    "typescript": "5.7.3"
