  "name": "eco-capture-and-claim",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.8.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean",
    "dev:web": "pnpm run dev --filter=web",
    "dev:mobile": "pnpm run dev --filter=mobile",
    "test": "turbo run test",
    "type-check": "tsc --noEmit",
    "vercel-build": "pnpm install && turbo run build",
    "postinstall": "corepack enable"
  },
