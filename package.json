{
  "name": "eco-capture-and-claim",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --filter=!@eco/database",
    "build:dev": "turbo run build:dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "dev:web": "pnpm run dev --filter=web",
    "dev:mobile": "pnpm run dev --filter=mobile",
    "test": "turbo run test",
    "type-check": "tsc --noEmit",
    "vercel-build": "pnpm install --frozen-lockfile && pnpm build",
    "postinstall": "corepack enable"
  },
  "devDependencies": {
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-form": "0.1.1",
    "@radix-ui/react-hover-card": "1.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-menubar": "1.1.4",
    "@radix-ui/react-navigation-menu": "1.2.3",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-progress": "1.1.1",
    "@radix-ui/react-radio-group": "1.2.2",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "1.1.1",
    "@radix-ui/react-slider": "1.2.2",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-switch": "1.1.2",
    "@radix-ui/react-tabs": "1.1.2",
    "@radix-ui/react-toast": "1.2.4",
    "@radix-ui/react-toggle": "1.1.1",
    "@radix-ui/react-toggle-group": "1.1.1",
    "@radix-ui/react-tooltip": "1.1.6",
    "@tanstack/react-query": "5.64.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react-swc": "3.7.2",
    "class-variance-authority": "0.7.1",
    "cmdk": "1.0.4",
    "embla-carousel-react": "8.5.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "expo-barcode-scanner": "13.0.1",
    "expo-camera": "16.0.11",
    "expo-constants": "17.0.4",
    "expo-location": "18.0.5",
    "input-otp": "1.4.2",
    "lovable-tagger": "1.0.19",
    "lucide-react": "0.473.0",
    "next-themes": "0.4.4",
    "prettier": "^3.2.4",
    "react-day-picker": "9.5.0",
    "react-hook-form": "7.54.2",
    "react-native": "0.76.6",
    "react-resizable-panels": "2.1.7",
    "react-router-dom": "7.1.3",
    "recharts": "2.15.0",
    "sonner": "1.7.2",
    "tailwind-merge": "2.6.0",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vaul": "1.1.2"
  },
  "engines": {
    "node": "20.11.0",
    "pnpm": ">=9.8.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "@types/react": "^18.2.48",
      "@types/react-dom": "^18.2.18",
      "eslint": "^8.56.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
